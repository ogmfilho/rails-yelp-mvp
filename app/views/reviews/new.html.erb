<div class="container">
  <h1>Leave a review for <%= @restaurant.name %></h1>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :rating, collection: (0..5), as: :radio_buttons %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

</div>
